@model CreateShortlinkViewModel
@{
    ViewBag.Title = "Create a short link";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-12 col-md-6">
        <div class="card border-secondary" style="display: inline-block">
            <div class="card-body">
                <h4 class="card-title text-center">
                    @ViewBag.Title
                </h4>
                <div class="card-text">
                    <form method="post" asp-action="CreateUrl" asp-controller="Home">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <input type="url" class="form-control rounded-3" asp-for="TargetUrl">
                            <label for="TargetUrl">Target url</label>
                        </div>
                        <small iclass="form-text text-muted">The generated link will be available for the next 10 days.</small>
                        <div class="float-end mt-3">
                            <button class="btn btn-primary my-3" type="submit">Shorten url</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function(){
            $('#homeIndex').addClass("active");
        });
    </script>
}
